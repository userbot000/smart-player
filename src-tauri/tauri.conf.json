{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Smart Player",
  "version": "0.1.0",
  "identifier": "com.user.smart-player",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "נגן חכם",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "he-IL"
      }
    },
    "shortDescription": "נגן מוזיקה חכם",
    "longDescription": "נגן מוזיקה חכם עם תמיכה בהורדות, ניהול ספרייה ועוד",
    "copyright": "© 2024 נגן חכם",
    "category": "Music",
    "publisher": "נגן חכם"
  }
}
